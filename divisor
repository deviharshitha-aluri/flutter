import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Divisor Finder',
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: const DivisorFinder(),
    );
  }
}

class DivisorFinder extends StatefulWidget {
  const DivisorFinder({Key? key}) : super(key: key);

  @override
  State<DivisorFinder> createState() => _DivisorFinderState();
}

class _DivisorFinderState extends State<DivisorFinder> {
  final TextEditingController _controller = TextEditingController();
  List<int> _divisors = [];
  String _result = '';

  void _findDivisors() {
    int? number = int.tryParse(_controller.text);
    if (number != null && number > 0) {
      List<int> divisors = [];
      for (int i = 1; i <= number; i++) {
        if (number % i == 0) {
          divisors.add(i);
        }
      }
      setState(() {
        _divisors = divisors;
        _result = 'Divisors of $number:';
      });
    } else {
      setState(() {
        _divisors = [];
        _result = 'Invalid input. Please enter a positive integer.';
      });
    }
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Divisor Finder'),
      ),
      body: Padding(
        padding: const EdgeInsets.all(20.0),
        child: Column(
          children: [
            TextField(
              controller: _controller,
              decoration: const InputDecoration(
                labelText: 'Enter a positive integer',
                border: OutlineInputBorder(),
              ),
              keyboardType: TextInputType.number,
            ),
            const SizedBox(height: 20),
            ElevatedButton(
              onPressed: _findDivisors,
              child: const Text('Find Divisors'),
            ),
            const SizedBox(height: 20),
            Text(
              _result,
              style: const TextStyle(fontSize: 18),
            ),
            const SizedBox(height: 10),
            Expanded(
              child: ListView.builder(
                itemCount: _divisors.length,
                itemBuilder: (context, index) {
                  return ListTile(
                    title: Text('${_divisors[index]}'),
                  );
                },
              ),
            ),
          ],
        ),
      ),
    );
  }
}

